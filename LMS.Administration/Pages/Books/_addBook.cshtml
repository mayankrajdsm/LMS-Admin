				<div class="form-group form-float">
					<div class="form-line">
						<input type="text" class="form-control" name="CustomTags" maxlength="255" required>
						<label class="form-label">Custom Tags</label>
					</div>
				</div>
			</div>

			<!-- Remarks -->
			<div class="col-md-4">
				<div class="form-group form-float">
					<div class="form-line">
						<input type="text" class="form-control" name="Remarks" maxlength="255" required>
						<label class="form-label">Remarks</label>
					</div>
				</div>
			</div>

			<!-- Subject Code -->
			<div class="col-md-4">
				<div class="form-group form-float">
					<div class="form-line">
						<input type="number" class="form-control" name="SubjectCode" required>
						<label class="form-label">Subject Code</label>
					</div>
				</div>
			</div>

			<!-- Pages -->
			<div class="col-md-4">
				<div class="form-group form-float">
					<div class="form-line">
						<input type="text" class="form-control" name="Pages" maxlength="255" required>
						<label class="form-label">Pages</label>
					</div>
				</div>
			</div>

			<!-- Month and Year -->
			<div class="col-md-4">
				<div class="form-group form-float">
					<div class="form-line">
						<input type="text" class="form-control" name="MonthandYear" maxlength="255" required>
						<label class="form-label">Month and Year</label>
					</div>
				</div>
			</div>

			<!-- Source -->
			<div class="col-md-4">
				<div class="form-group form-float">
					<div class="form-line">
						<input type="text" class="form-control" name="Source" maxlength="255" required>
						<label class="form-label">Source</label>
					</div>
				</div>
			</div>

			<!-- Reference -->
			<div class="col-md-4">
				<div class="form-group form-float">
					<div class="form-line">
						<input type="text" class="form-control" name="Reference" maxlength="255" required>
						<label class="form-label">Reference</label>
					</div>
				</div>
			</div>
	</div>
	<div>
		<div class="modal-footer">
			<button type="submit" class="btn btn-primary">Save Changes</button>
			<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
		</div>
	</div>
</form>

