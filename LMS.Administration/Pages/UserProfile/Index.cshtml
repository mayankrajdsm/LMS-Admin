@model List<LMS.Infrastructures.Models.UserProfile>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="template-demo">
                    <button type="button" class="btn btn-social-icon-text btn-google" id="btnAddEditInventoryPopUp"
                            data-bs-toggle="modal" data-bs-target="#dvAddEditBookPopUp">
                        <i class="mdi mdi-plus"></i>Add New User
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>UserId</th>
                                <th>FirstName</th>
                                <th>LastName </th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>PhoneNumber</th>
                                <th>Dob</th>
                                <th>Gender</th>
                                <th>Address</th>
                                <th>LastLogin</th>
                                <th>Status</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserId</td>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Password</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Dob</td>
                                        <td>@item.Gender</td>
                                        <td>@item.Address</td>
                                        <td>@item.LastLogin</td>
                                        <td>@item.Status</td>
                                        <td>@item.Role</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="dvAddEditBookPopUp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        @await Html.PartialAsync("_AddUser")
    </div>
</div>




