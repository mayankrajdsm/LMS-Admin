@page
@model LMS.Admin.Views.Home.BannerModel
@{
    ViewBag.Ref = "Infrastructure";
    ViewBag.Title = "Manage Banner";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label>File upload</label>
                        <div class="input-group col-xs-12">
                            <input type="File" class="form-control file-upload-info" placeholder="Upload Image" />
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="submit"> Upload </button>
                            </span>
                        </div>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Banner Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.lstBanner != null)
                            {
                                foreach (var item in Model.lstBanner)
                                {
                                    <tr>
                                        <td>@item.BannerName</td>
                                        <td>@item.IsActive</td>
                                        <td>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.BannerId" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>