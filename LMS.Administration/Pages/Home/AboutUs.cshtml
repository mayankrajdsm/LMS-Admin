@page
@model LMS.Admin.Views.Home.AboutUsModel
@{
    ViewBag.Ref = "Infrastructure";
    ViewBag.Title = "About Us";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <label asp-for="aboutUs.heading" class="form-label"></label>
                        <input asp-for="aboutUs.heading" class="form-control" />
                        <span asp-validation-for="aboutUs.heading" class="text-danger"></span>
                        <input type="hidden" asp-for="aboutUs.id" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="aboutUs.message" class="form-label"></label>
                        <textarea asp-for="aboutUs.message" class="form-control" />
                        <span asp-validation-for="aboutUs.message" class="text-danger"></span>
                    </div>
                    <div style="float:right;">
                        <button type="submit" class="btn btn-primary mr-2"> Submit</button>
                        <button class="btn btn-light mr-2">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>