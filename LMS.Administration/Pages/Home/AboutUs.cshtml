@page
@model LMS.Admin.Views.Home.AboutUsModel
@{
    ViewBag.Ref = "Infrastructure";
    ViewBag.Title = "About Us";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="body">
                <form id="form_advanced_validation" method="POST">
                    <div class="form-group form-float">
                        <label asp-for="aboutUs.heading" class="form-label"></label>
                        <div class="form-line">
                            <input asp-for="aboutUs.heading" class="form-control" />
                            <span asp-validation-for="aboutUs.heading" class="text-danger"></span>
                            <input type="hidden" asp-for="aboutUs.id" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <label asp-for="aboutUs.message" class="form-label"></label>
                        <div class="form-line">
                            @* <textarea asp-for="aboutUs.heading" id="ckeditor" /> *@
                            <textarea id="ckeditor"></textarea>
                            <span asp-validation-for="aboutUs.message" class="text-danger"></span>
                        </div>
                    </div>
                    <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                    <button class="btn bg-blue-grey waves-effect" type="button">RESET</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/plugins/ckeditor/ckeditor.js"></script>
<script src="~/assets/plugins/tinymce/tinymce.js"></script>
<script src="~/assets/js/pages/forms/editors.js"></script>
