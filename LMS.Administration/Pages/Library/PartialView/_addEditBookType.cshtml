@model LMS.Administration.Pages.Library.BookType
@{
}
<form id="form_advanced_validation" method="POST">
    <div class="modal-body">
        <div class="form-group form-float">
            <label asp-for="code" class="form-label"></label>
            <div class="form-line">
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
                <input type="hidden" asp-for="id" />
            </div>
        </div>
        <div class="form-group form-float">
            <label asp-for="name" class="form-label"></label>
            <div class="form-line">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group form-float">
            <label asp-for="IsActive" class="form-label"></label>
            <div class="form-line">
                <input type="checkbox" asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary waves-effect">SUBMIT</button>
        <button type="button" class="btn bg-blue-grey waves-effect" data-dismiss="modal">CLOSE</button>
    </div>
</form>
