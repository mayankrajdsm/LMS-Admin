@model LMS.Administration.Pages.StudentInfo.Subject
@{
}
<form id="form_advanced_validation" method="POST">
    <div class="modal-body">
        <div class="col-lg-4">
            <div class="form-group form-float">
                <div class="form-line">
                    <input type="checkbox" class="form-control" name="practical" required>
                    <label class="form-label">Is is master subject</label>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Master Subject</label>
                <div class="form-line">
                    <select class="form-control">
                        <option>Subject 1</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Subject Name</label>
                <div class="form-line">
                    <input type="text" class="form-control" name="minmaxlength" maxlength="10" minlength="3" required>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Subject Code</label>
                <div class="form-line">
                    <input type="text" class="form-control" name="minmaxvalue" min="10" max="200" required>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <div class="form-line">
                    <input type="checkbox" class="form-control" name="practical" required>
                    <label class="form-label">Is is practical</label>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Max weekly classes</label>
                <div class="form-line">
                    <input type="number" class="form-control" name="date" required>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <div class="form-line">
                    <input type="checkbox" class="form-control" name="practical" required>
                    <label class="form-label">Exclude from CGPA/PERIODIC</label>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <div class="form-line">
                    <input type="checkbox" class="form-control" name="practical" required>
                    <label class="form-label">do you want to enter grades on entry marks</label>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Entry marks</label>
                <div class="form-line">
                    <input type="number" class="form-control" name="date" required>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Subject fee(if any)</label>
                <div class="form-line">
                    <input type="number" class="form-control" name="date" required>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Conversion Mark(if any)</label>
                <div class="form-line">
                    <input type="number" class="form-control" name="date" required>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Credit Point</label>
                <div class="form-line">
                    <input type="number" class="form-control" name="date" required>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group form-float">
                <label class="form-label">Select Exam Head</label>
                <div class="form-line">
                    <select class="form-control">
                        <option>Subject 1</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary waves-effect">SUBMIT</button>
        <button type="button" class="btn bg-blue-grey waves-effect" data-dismiss="modal">CLOSE</button>
    </div>
</form>