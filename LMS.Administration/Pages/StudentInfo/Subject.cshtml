@model LMS.Administration.Pages.StudentInfo.SubjectModel
@{
    ViewBag.Ref = "Student";
    ViewBag.Title = "Subject";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a data-toggle="modal" data-target="#defaultModal">Add New Subject</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Package Name</th>
                                <th>Subscription Period</th>
                                <th>Price (Monthly)</th>
                                <th>Discount(%)</th>
                                <th>Subscription Amount</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Created By</th>
                                <th>Created On</th>
                                <th>Modified By</th>
                                <th>Modified On</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* @if (Model.subscriptionPackages != null)
                            {
                                if (Model.subscriptionPackages.Any())
                                {
                                    @foreach (var item in Model.subscriptionPackages)
                                    {
                                        var amount = ((item.PriceMonth * item.SubscriptionPeriodMonths) * (1 - item.DiscountPer));

                                        <tr>
                                            <td>@item.SubscriptionPackageName</td>
                                            <td>@item.SubscriptionPeriodMonths</td>
                                            <td>@item.PriceMonth</td>
