@page
@model LMS.Administration.Pages.Class.IndexModel
@{
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a data-toggle="modal" data-target="#defaultModal">Add New</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>

                                <th>Class Name</th>
                                <th>Sequence</th>
                                <th>Code</th>
                                <th>BatchName</th>
                                <th>StartDate</th>
                                <th>EndDate</th>
                                <th>IsActive</th>
                                <th>CreatedOn</th>
                                <th>CreatedBy</th>
                                <th>ModifiedBy</th>
                                <th>ModifiedOn</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model.classes)
                                {
                                    <tr>
                                        <td>@item.ClassesName</td>
                                        <td>@item.Sequence</td>
                                        <td>@item.Code</td>
                                        <td>@item.BatchName</td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>@item.IsActive</td>
                                        <td>@item.CreatedOn</td>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.ModifiedBy</td>
                                        <td>@item.ModifiedOn</td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="defaultModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="defaultModalLabel">Add New Class</h4>
            </div>
            @await Html.PartialAsync("~/Pages/Class/_addClass.cshtml")
        </div>
    </div>
</div>
