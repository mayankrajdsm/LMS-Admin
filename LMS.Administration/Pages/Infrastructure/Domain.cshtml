@page
@model LMS.Administration.Pages.Infrastructure.DomainModel
@{
    ViewBag.Ref = "Infrastructure";
    ViewBag.Title = "Domain Setting";
}
<!-- Bootstrap Material Datetime Picker Css -->
<link href="~/assets/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css"
    rel="stylesheet" />

<!-- Wait Me Css -->
<link href="~/assets/plugins/waitme/waitMe.css" rel="stylesheet" />

<!-- Custom Css -->
<link href="~/assets/css/style.css" rel="stylesheet">

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="body">
                <form id="form_advanced_validation" method="POST">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.RegisteredName" class="form-label"></label>
                                <div class="form-line">
                                    <input asp-for="domain.RegisteredName" class="form-control" />
                                    <span asp-validation-for="domain.RegisteredName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.Address1" class="form-label"></label>
                                <div class="form-line">

                                    <input asp-for="domain.Address1" class="form-control" />
                                    <span asp-validation-for="domain.Address1" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.Address2" class="form-label"></label>
                                <div class="form-line">

                                    <input asp-for="domain.Address2" class="form-control" />
                                    <span asp-validation-for="domain.Address2" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.CountryId" class="form-label"></label>
                                <div class="form-line">
                                @Html.DropDownListFor(domain => domain.domain.CountryId, new SelectList(Model.domain.lstCountry, "CountryId","CountryName"), new { @class = "form-control" })
                                    <span asp-validation-for="domain.CountryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        @* <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.StateId" class="form-label"></label>
                                <div class="form-line">


                                @Html.DropDownListFor(domain => domain.domain.StateId, new SelectList(Model.domain.lstState), new { @class = "form-control" })
                                    <span asp-validation-for="domain.StateId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.CityId" class="form-label"></label>
                                <div class="form-group">

                                @Html.DropDownListFor(domain => domain.domain.CityId, new SelectList(Model.domain.lstCity), new { @class = "form-control" })
                                    <span asp-validation-for="domain.CityId" class="text-danger"></span>
                                </div>
                            </div>
                        </div> *@
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.ContactEmail" class="form-label"></label>
                                <div class="form-line">

                                    <input type="email" asp-for="domain.ContactEmail" class="form-control" />
                                    <span asp-validation-for="domain.ContactEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.ContactPerson" class="form-label"></label>
                                <div class="form-line">

                                    <input asp-for="domain.ContactPerson" class="form-control" />
                                    <span asp-validation-for="domain.ContactPerson" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                         <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.ContactNo" class="form-label"></label>
                                <div class="form-line">
                                    <input type="number" asp-for="domain.ContactNo" class="form-control" />
                                    <span asp-validation-for="domain.ContactNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.Website" class="form-label"></label>
                                <div class="form-group">

                                    <input type="url" asp-for="domain.Website" class="form-control" />
                                    <span asp-validation-for="domain.Website" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <label asp-for="domain.FinancialYearStartDate" class="form-label"></label>
                                <div class="form-group">

                                    <input asp-for="domain.FinancialYearStartDate" class="datepicker form-control"
                                        placeholder="Please choose a date..." />
                                    <span asp-validation-for="domain.FinancialYearStartDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                        <button class="btn bg-blue-grey waves-effect" type="button">RESET</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Moment Plugin Js -->
<script src="~/assets/plugins/momentjs/moment.js"></script>
<!-- Bootstrap Material Datetime Picker Plugin Js -->
<script src="~/assets/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>
<script src="~/assets/js/pages/forms/basic-form-elements.js"></script>