@page
@model LMS.Administration.Pages.Infrastructure.InventoryModel
@{
    ViewBag.Ref = "Infrastructure";
    ViewBag.Title = "Manage Inventory";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="template-demo">
                    <button type="button" class="btn btn-social-icon-text btn-google" id="btnAddEditInventoryPopUp"
                            data-bs-toggle="modal" data-bs-target="#dvAddEditInventoryPopUp">
                        <i class="mdi mdi-plus"></i>Add New Inventory
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Product</th>
                                <th>Sale</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Jacob</td>
                                <td>Photoshop</td>
                                <td class="text-danger">
                                    28.76% <i class="mdi mdi-arrow-down"></i>
                                </td>
                                <td>
                                    <label class="badge badge-danger">Pending</label>
                                </td>
                            </tr>
                            <tr>
                                <td>Messsy</td>
                                <td>Flash</td>
                                <td class="text-danger">
                                    21.06% <i class="mdi mdi-arrow-down"></i>
                                </td>
                                <td>
                                    <label class="badge badge-warning">In progress</label>
                                </td>
                            </tr>
                            <tr>
                                <td>John</td>
                                <td>Premier</td>
                                <td class="text-danger">
                                    35.00% <i class="mdi mdi-arrow-down"></i>
                                </td>
                                <td>
                                    <label class="badge badge-info">Fixed</label>
                                </td>
                            </tr>
                            <tr>
                                <td>Peter</td>
                                <td>After effects</td>
                                <td class="text-success">
                                    82.00% <i class="mdi mdi-arrow-up"></i>
                                </td>
                                <td>
                                    <label class="badge badge-success">Completed</label>
                                </td>
                            </tr>
                            <tr>
                                <td>Dave</td>
                                <td>53275535</td>
                                <td class="text-success">
                                    98.05% <i class="mdi mdi-arrow-up"></i>
                                </td>
                                <td>
                                    <label class="badge badge-warning">In progress</label>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="dvAddEditInventoryPopUp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        @await Html.PartialAsync("~/Pages/Infrastructure/PartialView/_addEditInventory.cshtml", Model.inventoryCls)
    </div>
</div>

