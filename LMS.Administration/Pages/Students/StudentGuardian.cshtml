@page
@model LMS.Administration.Pages.Students.StudentGuardianModel
@{
    ViewBag.Ref = "Infrastructure";
    ViewBag.Title = "Student Guardian Details";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a data-toggle="modal" href="/Students/addeditstudent">Add New</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Aadhaar</th>
                                <th>Relation</th>
                                <th>Date of Birth</th>
                                <th>Education</th>
                                <th>Occupation</th>
                                <th>Annual Income</th>
                                <th>Organization Name</th>
                                <th>Designation</th>
                                <th>Office Contact</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Office Address</th>
                                <th>City</th>
                                <th>State</th>
                                <th>Pincode</th>
                                <th>Country</th>
                                <th>Mobile</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var guardian in Model.studentGuardians)
                                {
                                    <tr>
                                        <td>@guardian.Name</td>
                                        <td>@guardian.Adhar</td>
                                        <td>@guardian.Relation</td>
                                        <td>@guardian.DateOfBirth</td>
                                        <td>@guardian.Education</td>
                                        <td>@guardian.Occupation</td>
                                        <td>@guardian.AnnualIncome</td>
                                        <td>@guardian.OrganizationName</td>
                                        <td>@guardian.Designation</td>
                                        <td>@guardian.OfficeContact</td>
                                        <td>@guardian.Email</td>
                                        <td>@guardian.Address</td>
                                        <td>@guardian.OfficeAddress</td>
                                        <td>@guardian.City</td>
                                        <td>@guardian.State</td>
                                        <td>@guardian.Pincode</td>
                                        <td>@guardian.Country</td>
                                        <td>@guardian.Mobile</td>
                                        <td>

                                            <a href="@Url.Page("addEditStudent" ,guardian)" class="btn btn-primary">Edit</a>
                                            <form method="post" asp-page-handler="Delete" asp-route-GuardianId="@guardian.GuardianId" onsubmit="return confirm('Are you sure you want to delete this student?');">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

