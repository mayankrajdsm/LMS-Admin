@page
@model LMS.Administration.Pages.Students.StudentContactModel
@{
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="template-demo">
                    <button type="button" class="btn btn-social-icon-text btn-google" id="btnaddStudentContact"
                            data-bs-toggle="modal" data-bs-target="#addStudentContact">
                        <i class="mdi mdi-plus"></i>Add New Student Contact
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Address 1</th>
                                <th>Address 2</th>
                                <th>Address 3</th>
                                <th>City</th>
                                <th>District</th>
                                <th>State</th>
                                <th>Pin Code</th>
                                <th>Country</th>
                                <th>Mobile</th>
                                <th>Father's Mobile</th>
                                <th>Mother's Mobile</th>
                                <th>Email</th>
                                <th>Alternate Email</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var student in Model.studentContacts)
                                {
                                    <tr>
                                        <td>@student.Address1</td>
                                        <td>@student.Address2</td>
                                        <td>@student.Address3</td>
                                        <td>@student.City</td>
                                        <td>@student.District</td>
                                        <td>@student.State</td>
                                        <td>@student.PinCode</td>
                                        <td>@student.Country</td>
                                        <td>@student.Mobile</td>
                                        <td>@student.FatherMobile</td>
                                        <td>@student.MotherMobile</td>
                                        <td>@student.Email</td>
                                        <td>@student.AlternateEmail</td>
                                        <td>
                                            <div class="template-demo">
                                                <button type="button" class="btn btn-primary" id="btnaddStudentContact"
                                                        data-bs-toggle="modal" data-bs-target="#addStudentContact">
                                                  Edit
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="addStudentContact" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        @await Html.PartialAsync("_addStudentContact")
    </div>
</div>

