@model LMS.Administration.Pages.Students.StudentContactModel
@{
    ViewBag.Ref = "Infrastructure";
    ViewBag.Title = "Student contact Details";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a data-toggle="modal" href="/Students/addeditstudent">Add New</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Address 1</th>
                                <th>Address 2</th>
                                <th>Address 3</th>
                                <th>City</th>
                                <th>District</th>
                                <th>State</th>
                                <th>Pin Code</th>
                                <th>Country</th>
                                <th>Mobile</th>
                                <th>Father's Mobile</th>
                                <th>Mother's Mobile</th>
                                <th>Email</th>
                                <th>Alternate Email</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var student in Model.studentContacts)
                                {
                                    <tr>
                                        <td hidden>@student.StudentId</td>
                                        <td>@student.Address1</td>
                                        <td>@student.Address2</td>
                                        <td>@student.Address3</td>
                                        <td>@student.City</td>
                                        <td>@student.District</td>
                                        <td>@student.State</td>
                                        <td>@student.PinCode</td>
                                        <td>@student.Country</td>
                                        <td>@student.Mobile</td>
                                        <td>@student.FatherMobile</td>
                                        <td>@student.MotherMobile</td>
                                        <td>@student.Email</td>
                                        <td>@student.AlternateEmail</td>
                                        <td>

                                            <a href="@Url.Page("addEditStudent" ,student)" class="btn btn-primary">Edit</a>
                                            <form method="post" asp-page-handler="Delete" 
                                            @* asp-route-StudentContactId="@student.StudentContactId" *@
                                             onsubmit="return confirm('Are you sure you want to delete this student?');">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
