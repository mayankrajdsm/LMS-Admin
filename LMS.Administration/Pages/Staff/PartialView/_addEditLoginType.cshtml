@{
}
<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="LoginTypeName" class="form-label"></label>
                    <input asp-for="LoginTypeName" class="form-control" />
                    <span asp-validation-for="LoginTypeName" class="text-danger"></span>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="LoginTypeKey" class="form-label"></label>
                    <input asp-for="LoginTypeKey" class="form-control" />
                    <span asp-validation-for="LoginTypeKey" class="text-danger"></span>
