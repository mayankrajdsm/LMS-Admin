@model LMS.Administration.Pages.Staff.Designation

<form method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="DesignationName"></label>
                    <input asp-for="DesignationName" class="form-control" />
                    <span asp-validation-for="DesignationName" class="text-danger"></span>
                    <input type="hidden" asp-for="DesignationId" />
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
</form>