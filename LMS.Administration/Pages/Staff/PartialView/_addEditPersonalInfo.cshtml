                    <label asp-for="BloodGroupId" class="form-label"></label>
                    <div class="form-line">
                        @* @Html.DropDownListFor(m => m.Title, Model.lstTitle, new
                            {
                                @class =
                                 "form-control"
                            }) *@
                        <select class="form-control show-tick">
                            <option value="">-- Please select --</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                            <option value="50">50</option>
                        </select>
                        <span asp-validation-for="BloodGroupId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <label asp-for="Nationality" class="form-label"></label>
                    <div class="form-line">
                        @* @Html.DropDownListFor(m => m.Title, Model.lstTitle, new
                            {
                                @class =
                                 "form-control"
                            }) *@
                        <select class="form-control show-tick">
                            <option value="">-- Please select --</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                            <option value="50">50</option>
                        </select>
                        <span asp-validation-for="Nationality" class="text-danger"></span>
